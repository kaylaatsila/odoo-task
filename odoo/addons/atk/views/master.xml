<odoo>
	<data>
		<!-- membuat tree/list -->
		<record model="ir.ui.view" id="master_tree_view">
			<field name="name">master.tree</field>
			<field name="model">master</field>
			<field name="arch" type="xml">
				<tree string="Master">
					<field name="product_name" />
					<field name="order_limit" widget="integer" type="char" />
					<field name="product_price" widget="integer" type="char"/>
				</tree>
			</field>
		</record>

		<!-- membuat tampilan form -->
		<record model="ir.ui.view" id="master_form_view">
			<field name="name">master.form</field>
			<field name="model">master</field>
			<field name="arch" type="xml">
				<form string="Form Master">
					<sheet>
						<group>
							<field name="product_name" />
							<field name="order_limit" />
							<field name="product_price" />
						</group>
						<notebook>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- membuat action/event object -->
		<record model="ir.actions.act_window" id="master_list_action">
			<field name="name">Master</field>
			<field name="res_model">master</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Masukkan produk pertamamu!</p>
			</field>
		</record>

		<menuitem id="main_menu" name="ATK"></menuitem>
		<menuitem id="master_menu" name="Master" parent="main_menu" action="master_list_action"></menuitem>

		<!-- ================================================================================================== -->

		<!-- membuat tree/list -->
		<record model="ir.ui.view" id="transaksi_tree_view">
			<field name="name">transaksi.tree</field>
			<field name="model">transaksi</field>
			<field name="arch" type="xml">
				<tree string="Transaksi">
					<field name="product_name" />
					<field name="division" />
					<field name="product_price" widget="integer" type="char"/>
				</tree>
			</field>
		</record>

		<!-- membuat tampilan form -->
		<record model="ir.ui.view" id="transaksi_form_view">
			<field name="name">transaksi.form</field>
			<field name="model">transaksi</field>
			<field name="arch" type="xml">
				<form string="Form Transaksi">
					<sheet>
						<group>
							<field name="product_name" />
							<field name="division" />
							<field name="product_price"/>
						</group>
						<notebook>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- membuat action/event object -->
		<record model="ir.actions.act_window" id="transaksi_list_action">
			<field name="name">Transaksi</field>
			<field name="res_model">transaksi</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Buat transaksi pertamamu!</p>
			</field>
		</record>

		<menuitem id="transaksi_menu" name="Transaksi" parent="main_menu" action="transaksi_list_action"></menuitem>
	</data>
</odoo>