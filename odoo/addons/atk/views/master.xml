<odoo>
	<data>
		<!-- membuat tree/list -->
		<record model="ir.ui.view" id="produk_tree_view">
			<field name="name">produk.tree</field>
			<field name="model">produk</field>
			<field name="arch" type="xml">
				<tree string="Product">
					<field name="product_name" />
					<field name="order_limit" widget="integer" type="char" />
					<field name="product_price" widget="integer" type="char"/>
				</tree>
			</field>
		</record>

		<!-- membuat tampilan form -->
		<record model="ir.ui.view" id="produk_form_view">
			<field name="name">produk.form</field>
			<field name="model">produk</field>
			<field name="arch" type="xml">
				<form string="Product Form">
					<sheet>
						<group>
							<field name="product_name" />
							<field name="order_limit" />
							<field name="product_price" />
						</group>
						<notebook>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- membuat action/event object -->
		<record model="ir.actions.act_window" id="produk_list_action">
			<field name="name">Product</field>
			<field name="res_model">produk</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Input your first product!</p>
			</field>
		</record>

		<menuitem id="main_menu" name="ATK"></menuitem>
		<menuitem id="master_menu" name="Master" parent="main_menu"></menuitem>
		<menuitem id="produk_menu" name="Product" parent="master_menu" action="produk_list_action"></menuitem>

		<!-- ================================================================================================== -->

		<!-- membuat tree/list -->
		<record model="ir.ui.view" id="divisi_tree_view">
			<field name="name">divisi.tree</field>
			<field name="model">divisi</field>
			<field name="arch" type="xml">
				<tree string="Division">
					<field name="division_name" />
				</tree>
			</field>
		</record>

		<!-- membuat tampilan form -->
		<record model="ir.ui.view" id="divisi_form_view">
			<field name="name">divisi.form</field>
			<field name="model">divisi</field>
			<field name="arch" type="xml">
				<form string="Division Form">
					<sheet>
						<group>
							<field name="division_name" />
						</group>
						<notebook>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- membuat action/event object -->
		<record model="ir.actions.act_window" id="divisi_list_action">
			<field name="name">Division</field>
			<field name="res_model">divisi</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Input your first division!</p>
			</field>
		</record>

		<menuitem id="divisi_menu" name="Division" parent="master_menu" action="divisi_list_action"></menuitem>

		<!-- ================================================================================================== -->

		<!-- membuat tree/list -->
		<record model="ir.ui.view" id="transaksi_tree_view">
			<field name="name">transaksi.tree</field>
			<field name="model">transaksi</field>
			<field name="arch" type="xml">
				<tree string="Transaction">
					<field name="division" />
					<field name="date" />
					<field name="state" />
				</tree>
			</field>
		</record>

		<!-- membuat tampilan form -->
		<record model="ir.ui.view" id="transaksi_form_view">
			<field name="name">transaksi.form</field>
			<field name="model">transaksi</field>
			<field name="arch" type="xml">
				<form string="Form Transaction">
					<header>
						<button name="action_send" string="Request" type="object" states="draft"/>
						<button name="action_reject" string="Reject" type="object" states="sent" class="btn-primary" group_id="transaksi_group_delete"/>
						<button name="action_approve" string="Approve" type="object" states="sent" class="btn-primary"   />
						<button name="action_draft" string="Reset" type="object" states="sent"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
					</header>
					<sheet>
						<group>
							<field name="division" />
							<field name="date" />
						</group>
						<field name="product_transaction" nolabel="1">
							<tree editable="bottom">
								<field name="product" />
								<field name="quantity" />
								<field name="sub_total" />
							</tree>
						</field>
						<group>
							<field name="grand_total" />
						</group>
						<notebook>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- membuat action/event object -->
		<record model="ir.actions.act_window" id="transaksi_list_action">
			<field name="name">Transaction</field>
			<field name="res_model">transaksi</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Make your first transaction!</p>
			</field>
		</record>

		<menuitem id="transaksi_menu" name="Transaction" parent="main_menu" action="transaksi_list_action"></menuitem>
	</data>
</odoo>