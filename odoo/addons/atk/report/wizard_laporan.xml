<odoo>
	<data>
		<record model="ir.ui.view" id="laporan_form_view_menu">
			<field name="name">laporan.wizard.form</field>
			<field name="model">laporan.wizard</field>
			<field name="arch" type="xml">
				<form string="Laporan">
					<group>
						<field name="state"/>
						<field name="start_date"/>
						<field name="end_date"/>
					</group>
					<footer>
						<button name="generate_report" type="object" string="Unduh" class="oe_highlight"/>
						<button special="cancel" string="Batal"/>
					</footer>
				</form>
			</field>
		</record>

		<act_window id="laporan_menu_action" name="Tambah Laporan" res_model="laporan.wizard" view_mode="form" view_id="laporan_form_view_menu" target="new"/>
		<menuitem id="laporan_menu" name="Laporan" parent="main_menu" action="laporan_menu_action"/>

	</data>
</odoo>